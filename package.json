{
  "name": "rest-countries-bff",
  "version": "1.0.0",
  "description": "Backend Portfolio - BFF GraphQL em TypeScript com arquitetura hexagonal, cache, rate-limiting e interface em portuguÃªs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest --run src/domain src/application src/graphql/mappers",
    "test:integration": "vitest --run src/__tests__/integration",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:ci": "vitest --run --coverage --reporter=verbose",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "graphql",
    "bff",
    "backend",
    "portfolio",
    "typescript",
    "hexagonal-architecture",
    "fastify",
    "cache",
    "rate-limiting",
    "rest-countries",
    "nodejs",
    "docker"
  ],
  "author": "Backend Developer Portfolio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/rest-countries-bff.git"
  },
  "homepage": "https://github.com/yourusername/rest-countries-bff#readme",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^9.0.1",
    "axios": "^1.6.2",
    "fastify": "^4.24.3",
    "mercurius": "^12.0.0",
    "node-cache": "^5.1.2",
    "pino-pretty": "^13.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
